.page-header
  = link_to students_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t(:back)
  = link_to edit_student_path(@student), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t(:edit)
  %h1= @student.username

%dl.dl-horizontal
  %dt= t(:classrooms)
  %dd= @student.classrooms.map{|c| c.name}.join(', ')
