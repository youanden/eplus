.page-header
  = link_to new_admin_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t(:new_admin)
  %h1= t(:listing_admins)

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t(:username)
        %th= t(:created_at)
        %th
        %th
        %th

    %tbody
      - @admins.each do |admin|
        %tr
          %td= admin.username
          %td= admin.created_at
          %td= link_to t(:show), admin
          %td= link_to t(:edit), edit_admin_path(admin)
          %td= link_to t(:destroy), admin, :data => { confirm: t(:are_you_sure) }, :method => :delete
