= form_for @admin, :html => { :class => "form-horizontal" } do |f|
  -if @admin.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@admin.errors.count, "error")} prohibited this admin from being saved:"

      %ul
        - @admin.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :username, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :username, :class => 'form-control'
  .form-group
    = f.label :password, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.password_field :password, :class => 'form-control'
  .form-group
    = f.label :password_confirmation, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.password_field :password_confirmation, :class => 'form-control'
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit :class => 'btn btn-primary'
