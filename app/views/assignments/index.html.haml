.page-header
  = link_to new_assignment_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t(:new_assignment)
  %h1= t(:listing_assignments)

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t(:name)
        %th= t(:value)
        %th= t(:due_date)
        %th= t(:classroom)
        %th= t(:admin)
        %th
        %th
        %th

    %tbody
      - @assignments.each do |assignment|
        %tr
          %td= assignment.name
          %td= assignment.value
          %td= l assignment.due_date, :format => :short
          %td= assignment.classroom.name
          %td= assignment.admin.username
          %td= link_to t(:show), assignment
          %td= link_to t(:edit), edit_assignment_path(assignment)
          %td= link_to t(:destroy), assignment, :data => { confirm: t(:are_you_sure) }, :method => :delete
